@using CodeAssessment.Application.Features.Models
@model AdminUser

@{
    Layout = "_LayoutLogout";
}

<div style="width:700px;margin-left:350px;">
    <h2> Login </h2>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Email Address</label>
        <div class="col-sm-5">
            <input type="text" class="form-control cls-common" asp-for="EmailAddress" placeholder="Email Address">
        </div>
        <span id="Error-EmailAddress" class="col-sm-4 cls-errormessage error-color"></span>
    </div>
    <div class="form-group row m-r-10">
        <label class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-5">
            <input type="password" class="form-control cls-common" asp-for="Password" placeholder="Password">
        </div>
        <span id="Error-Password" class="col-sm-4 cls-errormessage error-color"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" id="btn-submit" class="btn btn-primary" value="Submit" />
            <span id="returnMessage" class="m-l-15 error-color"> </span>
        </div>
    </div>
</div>
<script src="~/pagejs/signin.js" asp-append-version="true"></script>