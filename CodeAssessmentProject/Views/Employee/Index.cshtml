@using CodeAssessment.Application.Features.Models
@model Employee


<div style="width:700px;">

    @if (Model.ID > 0)
    {
        <a asp-action="AllEmployees" asp-controller="Employee">Back</a>

        <h2>Edit Employee Details </h2>
    }
    else
    {
        <h2>Create a new Employee</h2>
    }

    <input type="hidden" asp-for="ID" />

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-5">
            <input type="text" class="form-control cls-common" asp-for="Name" placeholder="Name">
        </div>
        <span id="Error-Name" class="col-sm-4 cls-errormessage error-color"></span>
    </div>
    <div class="form-group row m-r-10">
        <label class="col-sm-3 col-form-label">Department</label>
        <div class="col-sm-5">
            <input type="text" class="form-control cls-common" asp-for="Department" placeholder="Department">
        </div>
        <span id="Error-Department" class="col-sm-4 cls-errormessage error-color"></span>
    </div>
    <div class="form-group row m-r-10">
        <label class="col-sm-3 col-form-label">Job Tittle</label>
        <div class="col-sm-5">
            <input type="text" class="form-control cls-common" asp-for="JobTittle" placeholder="Job Tittle">
        </div>
        <span id="Error-JobTittle" class="col-sm-4 cls-errormessage error-color"></span>
    </div>
    <div class="form-group row m-r-10">
        <label class="col-sm-3 col-form-label">Salary</label>
        <div class="col-sm-5">
            <input type="text" class="form-control decimalInput cls-common" asp-for="Salary" placeholder="Salary">
        </div>
        <span id="Error-Salary" class="col-sm-4 cls-errormessage error-color"></span>
    </div>

    <fieldset class="form-group m-r-10">
        <div class="row">
            <legend class="col-form-label col-sm-3 pt-0">Remote Work Status</legend>
            <div class="col-sm-7">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="remotestatus" value="1" @if (Model.RemoteWorkStatus)
                    {
                        <text>checked</text>
                    }  >
                    <label class="form-check-label">
                        Yes
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="remotestatus" value="0" @if (!Model.RemoteWorkStatus)
                    {
                        <text>checked</text>
                    } >
                    <label class="form-check-label">
                        No
                    </label>
                </div>
            </div>
        </div>
    </fieldset>

    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" id="btn-submit" class="btn btn-primary" value="Submit" />
            <span id="returnMessage" class="m-l-15 color-green"> </span>
        </div>
    </div>
</div>

<script src="~/pagejs/employee.js" asp-append-version="true"></script>